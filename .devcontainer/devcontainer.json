{
	"name": "DEX Offender",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"postAttachCommand": "anvil --steps-tracing",
	"features": {
		"ghcr.io/devcontainers/features/sshd:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/nix:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"JuanBlanco.solidity",
				"usernamehw.errorlens",
				"rust-lang.rust-analyzer",
				"bungcip.better-toml",
				"serayuzgur.crates",
				"vadimcn.vscode-lldb"
			]
		}
	}
}